<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="6dp"
    android:backgroundTint="#ffffff">

    <!-- Contenido del CardView -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/card_background"
        android:dividerPadding="8dp"
        android:divider="@android:color/darker_gray">

        <!-- Nombre del Usuario y DNI -->
        <TextView
            android:id="@+id/tvUsuarioDni"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Usuario: [Nombre del Usuario] - DNI: [DNI]"
            android:textSize="18sp"
            android:textColor="#333333"
            android:textStyle="bold"
            android:paddingBottom="8dp" />

        <!-- Nombre del Médico y Especialidad -->
        <TextView
            android:id="@+id/tvMedicoEspecialidad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Médico: [Nombre del Médico] | Especialidad: [Especialidad]"
            android:textSize="16sp"
            android:textColor="#4B4B4B"
            android:paddingBottom="8dp" />

        <!-- Fecha y Hora -->
        <TextView
            android:id="@+id/tvFechaHora"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fecha: [Fecha de la cita] | Hora: [Hora de la cita]"
            android:textSize="16sp"
            android:textColor="#4B4B4B"
            android:paddingBottom="8dp" />

        <!-- Divisor sutil -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"
            android:layout_marginTop="8dp" />

    </LinearLayout>

</androidx.cardview.widget.CardView>
